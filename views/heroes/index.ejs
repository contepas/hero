<% include ../partials/header %>
    
 <div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Heroes Blog</h1>
            <p>Add your favourite Hero!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/heroes/new">Add Hero</a>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <div class="col-lg-12">
            <h3>Heroes Never Die!</h3>
                <% heroes.forEach(function(hero){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= hero.image %>">
                    <div class="caption">
                        <h4><%= hero.name %></h4>
                    </div>
                    <p>
                        <a href="/heroes/<%= hero._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
                <% }); %>
        </div>
    </div>
 </div>

<% include ../partials/footer %>