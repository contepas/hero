<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= hero.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/heroes/<%=hero._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hero[name]" value="<%=hero.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hero[image]" value="<%=hero.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hero[description]" value="<%=hero.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/heroes">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>